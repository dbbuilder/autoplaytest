# AutoPlayTest Environment Configuration
# Copy this file to .env and fill in your API keys

# ===== AI Provider API Keys =====
# At least one AI provider key is required

# Claude API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here

# OpenAI API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-key-here

# Google API key from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=AIza-your-google-key-here

# ===== AI Configuration =====
# Default AI Provider (claude, gpt, or gemini)
DEFAULT_AI_PROVIDER=claude

# Model Selection (optional - uses latest by default)
# CLAUDE_MODEL=claude-3-opus-20240229
# GEMINI_MODEL=gemini-pro
# GPT_MODEL=gpt-4-turbo-preview

# ===== Test Settings =====
# Maximum tests to generate per page
MAX_TESTS_PER_PAGE=10

# Test execution timeout (milliseconds)
TEST_TIMEOUT_SECONDS=30

# Feature flags
ENABLE_VISUAL_TESTING=false
ENABLE_ACCESSIBILITY_TESTING=true
ENABLE_PERFORMANCE_TESTING=true

# ===== Logging =====
# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# ===== Browser Configuration =====
# Default browser: chromium, firefox, webkit
DEFAULT_BROWSER=chromium

# Run headless by default
DEFAULT_HEADLESS=true

# ===== AWS Configuration (for Lambda deployment) =====
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_REGION=us-east-1

# ===== Optional Services =====
# PostgreSQL Database
# DATABASE_URL=postgresql://user:password@localhost/autoplaytest

# Redis (for distributed testing)
# REDIS_URL=redis://localhost:6379

# Monitoring
# SENTRY_DSN=https://your-sentry-dsn
# DATADOG_API_KEY=your-datadog-key